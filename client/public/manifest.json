{
  "name": "my-own-words",
  "version": "1.0",
  "description": "Browser extension using Story Protocol SDK",
  "action": {
    "default_popup": "index.html",
    "default_icon": "logo.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "https://api.pinata.cloud/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "manifest_version": 3
}
